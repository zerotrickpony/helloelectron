{
  "compilerOptions": {
    "outDir": "out/vscode",
    "target": "es2015",
    "module": "es2015",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "removeComments": false,
    "preserveConstEnums": true,
    "sourceMap": true,
    "strictNullChecks": true,
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "main/src/**/*.ts",
    "web/src/**/*.ts",
    "web/lib/js/**/*.js"
  ],
}
